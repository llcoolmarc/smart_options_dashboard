# ===========================
# Tastytrade Broker Settings
# ===========================

# Sandbox (Paper Trading) Credentials
TT_SANDBOX_USER=your_sandbox_username
TT_SANDBOX_PASS=your_sandbox_password

# Flip to LIVE only if you are ready and have passed sandbox graduation
USE_LIVE=false

# Always simulate orders (dry-run mode, no real fills)
ALWAYS_DRY_RUN=true

# ===========================
# OAuth (Advanced, optional)
# If you wire in OAuth login instead of username/password
# ===========================
TASTYTRADE_API_BASE=https://api.cert.tastyworks.com
TASTYTRADE_OAUTH_URL=https://api.cert.tastyworks.com/oauth/token
TASTYTRADE_AUTH_URL=https://cert-my.staging-tasty.works/auth.html
TASTYTRADE_CLIENT_ID=
TASTYTRADE_CLIENT_SECRET=
TASTYTRADE_REDIRECT_URI=http://localhost:8080/callback
TASTYTRADE_TOKEN_PATH=data/tastytrade_token.json

# ===========================
# Dashboard / Misc Settings
# ===========================
# Dashboard mode: DEV | PROD
MODE=DEV

# URL prefix if hosting behind a proxy
PATH_PREFIX=/v14/
